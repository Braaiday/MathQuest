<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MathQuest.DifficultyScreen"
             BackgroundImageSource="demo2.jpg">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS, Android" Value="0,40,0,0" />
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" >
            <Label x:Name="greeting" HorizontalOptions="Center" VerticalOptions="Center" Text="Pick your difficulty!" FontSize="28" FontAttributes="Bold" Margin="30" TextColor="White"  Padding="30"/>
            <Button Text="Easy" BackgroundColor="Green" HorizontalOptions="Center" VerticalOptions="Center" x:Name="EasyButton" Clicked="EasyButton_Clicked" Margin="40" WidthRequest="300" FontSize="30">
                
            </Button>
            <Button Text="Intermediate" BackgroundColor="Yellow" HorizontalOptions="Center" VerticalOptions="Center" x:Name="IntermediateButton" Clicked="IntermediateButton_Clicked" Margin="40" WidthRequest="300" FontSize="30">
                
            </Button>
            <Button Text="Difficult" BackgroundColor="Red" HorizontalOptions="Center" VerticalOptions="Center" x:Name="DifficultButton" Clicked="DifficultButton_Clicked" Margin="40" WidthRequest="300" FontSize="30">
                
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>