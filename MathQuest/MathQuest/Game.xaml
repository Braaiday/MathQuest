<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MathQuest.Game">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                x:Name="question"/>
            <Entry Placeholder="Answer" x:Name="playeranswer">
                
            </Entry>
            <Button Text="Submit" x:Name="SubmitButton" Clicked="SubmitButton_Clicked">
                
            </Button>
            <Label x:Name="message">
                
            </Label>
            <Button Text="Next Question!" x:Name="NextButton" Clicked="NextButton_Clicked" IsEnabled="False">
                
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>